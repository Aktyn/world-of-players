{
  "name": "@world-of-players/backend",
  "version": "1.0.1",
  "description": "",
  "main": "./dist/main.js",
  "private": true,
  "scripts": {
    "publish": "rimraf lib && cross-env NODE_ENV=prod tsc -p ./tsconfig.json",
    "build": "tsc -p ./tsconfig.json",
    "dev": "cross-env NODE_ENV=dev&& nodemon --watch ./src --exec \"npm run build && npm start\" -e ts",
    "start": "node ./dist/main.js",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "cross-env npm run build && npm run format && eslint --ext .js,.ts,.tsx src",
    "test": "npm run build && jest --coverage --ci --no-cache",
    "test:watch": "npm run build && jest --watch --no-cache",
    "prisma:migrate": "prisma migrate dev --name init"
  },
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@nestjs/common": "^9.0.3",
    "@nestjs/core": "^9.0.3",
    "@nestjs/platform-express": "^9.0.3",
    "@nestjs/platform-socket.io": "^9.0.3",
    "@nestjs/swagger": "^6.0.3",
    "@nestjs/websockets": "^9.0.3",
    "@prisma/client": "^4.2.1",
    "@sendgrid/mail": "^7.7.0",
    "@types/express": "^4.17.13",
    "@world-of-players/shared": "^1.0.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "handlebars": "^4.7.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "socket.io": "^4.5.1",
    "swagger-ui-express": "^4.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.3",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  }
